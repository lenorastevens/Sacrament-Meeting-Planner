@page
@model Sacrament_Meeting_Planner.Pages.Meetings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Program</h4>
    <hr />
    <div id="program-title">
        <h5>World Wide Ward</h5>
        <h5>@Html.DisplayFor(model => model.Meeting.Date)</h5>
    </div>
    <dl id="details-div" class="row">        
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Meeting.Presiding)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Meeting.Presiding)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Meeting.Conducting)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Meeting.Conducting)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Meeting.OpeningHymn)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Meeting.OpeningHymn)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Meeting.Invocation)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Meeting.Invocation)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Meeting.SacramentHymn)
        </dt>        
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Meeting.SacramentHymn)
        </dd>
        <dt class="col-sm-12 text-center">
            <p>ADMINISTRATION OF THE SACRAMENT</p>
        </dt>
        @if (Model.Meeting.Speakers.Count > 0)
        {
            @if (Model.Meeting.Speakers.Count == 2)
            {
                <dt class="col-sm-3">Speaker</dt>
                <dd class="col-sm-9">
                    <div>@Model.Meeting.Speakers[0].Name</div>
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Meeting.IntermediateHymn)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Meeting.IntermediateHymn)
                </dd>
                <dt class="col-sm-3">Speaker</dt>
                <dd class="col-sm-9">
                    <div>@Model.Meeting.Speakers[1].Name</div>
                </dd>

            }
            else if (Model.Meeting.Speakers.Count >= 2)
            {
                <dt class="col-sm-3">Speaker</dt>
                <dd class="col-sm-9">
                    <div>@Model.Meeting.Speakers[0].Name</div>
                </dd>
                <dt class="col-sm-3">Speaker</dt>
                <dd class="col-sm-9">
                    <div>@Model.Meeting.Speakers[1].Name</div>
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Meeting.IntermediateHymn)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Meeting.IntermediateHymn)
                </dd>
                @for (var i = 2; i<Model.Meeting.Speakers.Count; i++)
                {
                    <dt class="col-sm-3">Speaker</dt>
                    <dd class="col-sm-9">
                        <div>@Model.Meeting.Speakers[i].Name</div>
                    </dd>
                }
            }
           
        }
        
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Meeting.ClosingHymn)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Meeting.ClosingHymn)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Meeting.Benediction)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Meeting.Benediction)
        </dd>        
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Meeting.Id">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
